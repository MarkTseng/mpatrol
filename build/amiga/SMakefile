# SAS/C Makefile to compile on AmigaOS with SAS/C


# $Id: SMakefile,v 1.15 2000-04-20 23:25:31 graeme Exp $


# Definitions

CC = SC
AR = OML

SOURCE = //src

CFLAGS = STKEXT NOVER IDIR $(SOURCE)
OFLAGS = OPT STRMER
TFLAGS = DEF MP_THREADS_SUPPORT=1

LIBRARY	= mpatrol

ARCHIVE_OBJECTS	= list.o tree.o slots.o utils.o memory.o heap.o alloc.o info.o \
		  stack.o addr.o strtab.o symbol.o signals.o diag.o option.o \
		  profile.o inter.o version.o
ARCHTS_OBJECTS	= list.t.o tree.t.o slots.t.o utils.t.o memory.t.o heap.t.o \
		  alloc.t.o info.t.o stack.t.o addr.t.o strtab.t.o symbol.t.o \
		  signals.t.o mutex.t.o diag.t.o option.t.o profile.t.o \
		  inter.t.o version.t.o

ARCHIVE_LIBRARY	= $(LIBRARY).lib
OBJECT_LIBRARY	= lib$(LIBRARY).o
ARCHTS_LIBRARY	= $(LIBRARY)mt.lib
OBJTS_LIBRARY	= lib$(LIBRARY)mt.o


# Rules

.SUFFIXES: .c .o .t.o

.c.o:
	$(CC) $(CFLAGS) $(OFLAGS) OBJNAME $@ $<

.c.t.o:
	$(CC) $(CFLAGS) $(OFLAGS) $(TFLAGS) OBJNAME $@ $<

$(ARCHIVE_LIBRARY): $(ARCHIVE_OBJECTS)
	$(AR) -n $@ REPLACE $(ARCHIVE_OBJECTS)

$(OBJECT_LIBRARY): $(SOURCE)/library.c
	$(CC) $(CFLAGS) $(OFLAGS) OBJNAME $@ $(SOURCE)/library.c

$(ARCHTS_LIBRARY): $(ARCHTS_OBJECTS)
	$(AR) -n $@ REPLACE $(ARCHTS_OBJECTS)

$(OBJTS_LIBRARY): $(SOURCE)/library.c
	$(CC) $(CFLAGS) $(OFLAGS) $(TFLAGS) OBJNAME $@ $(SOURCE)/library.c

mpatrol: mpatrol.o getopt.o version.o
	$(CC) $(CFLAGS) $(OFLAGS) LINK PNAME $@ mpatrol.o getopt.o version.o

memleak: memleak.o getopt.o tree.o version.o
	$(CC) $(CFLAGS) $(OFLAGS) LINK PNAME $@ memleak.o getopt.o tree.o version.o

all: $(ARCHIVE_LIBRARY) $(ARCHTS_LIBRARY) mpatrol memleak

clean:
	-@ Delete $(ARCHIVE_OBJECTS) $(ARCHTS_OBJECTS) FORCE >NIL:
	-@ Delete mpatrol.o memleak.o getopt.o FORCE >NIL:

clobber: clean
	-@ Delete $(ARCHIVE_LIBRARY) $(ARCHTS_LIBRARY) FORCE >NIL:
	-@ Delete $(OBJECT_LIBRARY) $(OBJTS_LIBRARY) FORCE >NIL:
	-@ Delete mpatrol mpatrol.lnk memleak memleak.lnk FORCE >NIL:


# Dependencies

